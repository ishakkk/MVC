@using MVCSTOK.Models.Entity
@model List<TBL_MUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index","Musteri",FormMethod.Get))
{
    <p>
        <b>Aranacak Müşteri Adı : </b>@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>
            MÜŞTERİ ID
        </th>
        <td>
            MÜŞTERİ ADI
        </td>
        <td>
            MÜŞTERİ SOYADI
        </td>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var mstr in Model)
        {
            <tr>
                <th>
                    @mstr.MUSTERIID
                </th>
                <th>
                    @mstr.MUSTERIAD
                </th>
                <th>
                    @mstr.MUSTERISOYAD
                </th>
                <td><a href="/MUSTERI/SIL/@mstr.MUSTERIID" class="btn btn-danger">SİL</a> </td>
                <td><a href="/MUSTERI/MusteriGetir/@mstr.MUSTERIID" class="btn btn-success">GÜNCELLE</a> </td>
                <td>@Html.ActionLink("SİL BUTONU", "SIL", new { id = mstr.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmel İstiyor Musunuz ?')" })</td>
            </tr>
            }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri">Yeni Müşteri Ekle</a>


